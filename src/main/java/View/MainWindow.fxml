<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.MainWindowController">
    <center>
        <TableView fx:id="pageTableView" prefHeight="200.0"
                   prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="urlColumn" prefWidth="75.0"
                             text="Url" />
                <TableColumn fx:id="sentenceColumn" prefWidth="75.0"
                             text="Sentencje" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <top>
        <TableView fx:id="queryTableView" prefHeight="200.0"
                   prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="queryUrlColumn" prefWidth="75.0"
                             text="Url" />
                <TableColumn fx:id="sentencePatternColumn" prefWidth="75.0"
                             text="Sentence Pattern" />
                <TableColumn fx:id="forbiddenWordsColumn" prefWidth="75.0"
                             text="Forbidden Words" />
                <TableColumn fx:id="deepColumn" prefWidth="75.0"
                             text="Deep" />
                <TableColumn fx:id="subdomainsColumn" prefWidth="75.0"
                             text="Subdomains" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </top>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0"
              BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </opaqueInsets>
            <children>
                <Button fx:id="addButton" alignment="TOP_CENTER"
                        maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#handleAddAction" text="Add new Query">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </VBox>
    </right>

</BorderPane>